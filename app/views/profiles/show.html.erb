<div class="page header">
  <h1><%= @user.full_name %> </h1>
</div>

<%= link_to "Post a New Quote", new_status_path, class:"btn btn-success"%>

<body>
  <div class="row">
      <div class="span-5">
        <p>Shit I've Heard...</p>
        <% if @statuses %>
          <% @statuses.each do |status| %>
            <div class="well">
              <%= status.content %>
              <br></br>
              <% @profile_user = User.find(status.tag_list).first %>

              <%= link_to "-" + @profile_user.full_name, user_profile_path(@profile_user.profile_name) %>

              <br></br>
              <%= "as heard by " + status.user.full_name %>
              <hr />
              <%= link_to time_ago_in_words(status.created_at), status_path(status) %> ago
            </div>
          <% end %>
        <% end%>
      </div>
      <div class="span-5">
        <p>Shit I've Said...</p>
          <% if @statuses %>
            <% @statuses.each do |status| %>
              <% @profile_user = User.find(status.tag_list).first %>
              <% if @user == @profile_user %>
                <div class="well">
                    <%= status.content %>
                    <br></br>

                    <%= link_to "-" + @profile_user.full_name, user_profile_path(@profile_user.profile_name) %>

                    <br></br>
                    <%= "as heard by " + status.user.full_name %>
                    <hr />
                    <%= link_to time_ago_in_words(status.created_at), status_path(status) %> ago
                </div>
              <% end %>
            <% end %>
          <% end%>

      </div>
      <div class="span-2">
        Friend List
      </div>
    </div>
</body>
